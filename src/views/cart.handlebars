<div class="cart">
    <h1>Carrito de compras</h1>
    {{#each cartsProducts}}
        <div class="cart-item">
            <h2>{{this.product.title}}</h2>
            <p>{{this.product.description}}</p>
            <p>Cantidad: {{this.quantity}}</p>
            <p>Precio: {{this.product.price}}</p>
        </div>
    {{/each}}
    <p class="cart-total">Total: {{total}}</p>
    <button class="cart-checkout" onclick="purchase('{{cartId}}')">Comprar</button>
    <button class="cart-clear" onclick="clearCart('{{cartId}}')">Vaciar carrito</button>
    <button class="cart-back" onclick="window.location.href = '/products'">Volver</button>
</div>
<script src="/js/cart.js"></script>